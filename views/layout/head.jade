meta(name='author', content='Joel Hans')
meta(name='description', content='Hark is podcasts for everyone. Hark lets you listen tons of podcasts all in one place.')

meta(charset='utf-8')
meta(name='viewport', content='width=device-width')

link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Lato:400,700,700italic', rel='stylesheet')
link(rel='stylesheet', href='/css/screen.css')
link(rel='shortcut icon', type='image/x-icon', href='/img/favicon.ico')

if (typeof(user) !== 'undefined')
  link(rel="alternate", type="application/rss+xml", href='/user/' + user.userID + '/rss/')

script(src='//ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js')
script(src='/js/app.js')

<!--[if lt IE 9]>
script(src='//html5shiv.googlecode.com/svn/trunk/html5.js')
link(rel='stylesheet', href='/public/css/ie.css')
<![endif]-->

if (typeof(playing) !== 'undefined')
  script(type='text/javascript')
    var playing = {
      podcast: "#{playing.podcast}",
      podcastTitle: "#{playing.podcastTitle}",
      podcastID: "#{playing.podcastID}",
      progress: "#{playing.progress}",
      feedUUID: "#{playing.feedUUID}",
      feedTitle: "#{playing.feedTitle}"
    }