doctype 5
html(lang="en")
	head
		- if (individual == true)
			title Hark | Directory | #{result.title}
		- else if (category != 'all')
			title Hark | Directory | #{category}
		- else
			title Hark | Directory
		
		!=partial('layout/head')
	
	body

		- if (user === false)
			!=partial('layout/header-log-out')
		- else
			!=partial('layout/header')

		section.hark-container
			!=partial('directory/directory-structure')

		footer
			!=partial('layout/player')

		section#modal
			!=partial('layout/modal')