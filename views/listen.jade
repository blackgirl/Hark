doctype 5
html(lang="en")
	head
		if (typeof(user.username) !== 'undefined')
			title Hark | #{user.username}'s podcasts
		else
			title Hark | Your podcasts

		!=partial('layout/head')

	body

		!=partial('layout/header')

		!=partial('listen/listen-structure')

		section.footer-v2
			!=partial('layout/player')

		section#error-mask
			div.js-modal-error
				span.modal-error-close x
				p.error-text