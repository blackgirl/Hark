doctype 5
html(lang="en")
	head
		title Hark | #{username}'s Podcasts
		
		!=partial('layout/head')

		if playing
			script(type='text/javascript')
				var playing = {
					podcast: "#{playing.podcast}",
					podcastTitle: "#{playing.podTitle}",
					podcastID: "#{playing.podcastID}",
					progress: "#{playing.progress}",
					feedUUID: "#{playing.podcastFeed}",
					feedTitle: "#{playing.feedTitle}"
				}

	body

		header#hark-header
			div.logo.left-column
				div.hark-listen
					a(href="/listen")
						img(src='/img/hark-logo-small.png')
					div.pulse
					&nbsp;
				div.header-settings
					<a href="/listen" class="go-home">Home</a>
					<a href="/settings" class="go-settings">Settings</a>
					<a href="/#help" class="go-help">Help/FAQ</a>
					<a href="/logout" class="logout">Log out</a>
			!=partial('partials/player')
				
		canvas#header-wave(width='1200', height='40')

		section#actions.clearfix
			div.actions.left-column
				ul
					li.action.active.act-add Add
					li.action.active.act-update Update
				span.add-feed-container
					input(type='text', class='add-feed', placeholder='Copy an RSS feed here and hit <Enter>.')

			div.actions.right-column
				ul
					li.action.inactive.act-listen Listen
					li.action.inactive.act-mark Mark as listened
					li.action.inactive.act-read Read description
					li.action.inactive.act-source Go to source
					li.action.inactive.act-download Download

		section#hark-podcasts.clearfix
			!=partial('partials/podcasts')

		section#error-mask
			div.js-modal-error
				span.modal-error-close x
				p.error-text